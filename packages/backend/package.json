{
  "name": "@pokemon/backend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "node ace serve --watch",
    "build": "node ace build --production",
    "start": "node server.js",
    "test": "node ace test",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write .",
    "prod": "pm2 start build/server.js",
    "seed": "node ace db:seed",
    "migration": "node ace migration:run"
  },
  "eslintConfig": {
    "extends": [
      "plugin:adonis/typescriptApp",
      "prettier",
      "@pokemon/eslint-config"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error"
      ]
    }
  },
  "eslintIgnore": [
    "build"
  ],
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 100
  },
  "dependencies": {
    "@adonisjs/auth": "^8.2.3",
    "@adonisjs/core": "^5.8.0",
    "@adonisjs/i18n": "^1.5.6",
    "@adonisjs/lucid": "^18.4.0",
    "@adonisjs/redis": "^7.3.2",
    "@adonisjs/repl": "^3.1.0",
    "@pokemon/service": "*",
    "adonis-rabbit": "^0.2.0",
    "luxon": "^3.3.0",
    "pg": "^8.11.1",
    "phc-bcrypt": "^1.0.8",
    "pm2": "^5.3.0",
    "proxy-addr": "^2.0.7",
    "reflect-metadata": "^0.1.13",
    "socket.io": "^4.7.1",
    "source-map-support": "^0.5.21",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^5.9.5",
    "@japa/preset-adonis": "^1.2.0",
    "@japa/runner": "^2.5.1",
    "@pokemon/eslint-config": "*",
    "@types/proxy-addr": "^2.0.0",
    "@types/source-map-support": "^0.5.6",
    "@types/uuid": "^9.0.2",
    "adonis-preset-ts": "^2.1.0",
    "eslint-plugin-adonis": "^2.1.1",
    "pino-pretty": "^10.0.1",
    "youch": "^3.2.3",
    "youch-terminal": "^2.2.2"
  }
}
